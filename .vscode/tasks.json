{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"-Wall",
				"-Wextra",
				"-Werror",
				"${workspaceFolder}/${relativeFile}",
				"-o",
				"${workspaceFolder}/a.out"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "gcc build active folder",
			"command": "${workspaceFolder}/.vscode/compile.sh",
			"args": [
				"${workspaceFolder}/${relativeFileDirname}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "fsrcs",
			"command": "${workspaceFolder}/fsrcs.sh",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "none",
		},
		{
			"type": "shell",
			"label": "clear_history",
			"command": "/bin/rm",
			"args": [".sh_history"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "none",
		},
		{
			"type": "shell",
			"label": "Make",
			"command": "/usr/bin/make",
			"args": [

			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"dependsOn": [
				"fsrcs",
				// "clear_history"
			]
		},
		{
			"type": "shell",
			"label": "norminette activ file",
			"command": "/usr/bin/norminette",
			"args": [
				"${workspaceFolder}/${relativeFile}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build"
		}
	]
}
